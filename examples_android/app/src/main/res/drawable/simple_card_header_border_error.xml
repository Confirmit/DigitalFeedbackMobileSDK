<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/simpleSurveyError" />
            <corners
                android:topLeftRadius="@dimen/simple_card_corner_radius"
                android:topRightRadius="@dimen/simple_card_corner_radius" />
        </shape>
    </item>
    <item android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/simpleSurveyButton" />
            <stroke
                android:width="2dp"
                android:color="@color/simpleSurveyError" />
            <corners
                android:topLeftRadius="@dimen/simple_card_corner_radius"
                android:topRightRadius="@dimen/simple_card_corner_radius" />
        </shape>
    </item>
</layer-list>
